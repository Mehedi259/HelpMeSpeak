<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
    Info.plist Configuration for HelpMeSpeak iOS Application

    This file contains essential configuration settings for the iOS app including:
    - Bundle configuration and app metadata
    - Privacy permissions and usage descriptions
    - Third-party integrations (Google Sign-In, SKAdNetwork)
    - UI configurations and supported orientations

    Last Updated: January 2026
    Platform: iOS (Flutter)
-->
<plist version="1.0">
<dict>

    <!-- ============================================== -->
    <!-- BUNDLE CONFIGURATION                            -->
    <!-- ============================================== -->

    <!-- Bundle identifier - Unique identifier for the app -->
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

    <!-- App display name shown on the home screen -->
    <key>CFBundleDisplayName</key>
    <string>Helpmespeak</string>

    <!-- Internal app name -->
    <key>CFBundleName</key>
    <string>HelpMeSpeak</string>

    <!-- Executable name - Generated by build system -->
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- Bundle package type - APPL for application -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- App version number (user-facing) -->
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>

    <!-- Build number (internal versioning) -->
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <!-- Bundle signature - Legacy value for compatibility -->
    <key>CFBundleSignature</key>
    <string>????</string>

    <!-- Info dictionary version -->
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <!-- Development region for localization -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>

    <!-- Requires iOS device to run -->
    <key>LSRequiresIPhoneOS</key>
    <true/>


    <!-- ============================================== -->
    <!-- PRIVACY PERMISSIONS & USAGE DESCRIPTIONS       -->
    <!-- Required by Apple App Store Review Guidelines  -->
    <!-- ============================================== -->

    <!-- Camera Access Permission -->
    <key>NSCameraUsageDescription</key>
    <string>HelpMeSpeak needs camera access to capture photos for your profile and share visual content in your posts.</string>

    <!-- Microphone Access Permission -->
    <key>NSMicrophoneUsageDescription</key>
    <string>HelpMeSpeak requires microphone access to enable voice recording, speech recognition, and real-time communication features.</string>

    <!-- Photo Library Read Permission -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>HelpMeSpeak needs access to your photo library to select and share images for your profile and posts.</string>

    <!-- Photo Library Write Permission -->
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>HelpMeSpeak needs permission to save captured images and generated content to your photo library.</string>

    <!-- Speech Recognition Permission -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>HelpMeSpeak uses speech recognition to convert your voice into text, helping you communicate more effectively and overcome speech challenges.</string>

    <!-- User Tracking Permission (iOS 14.5+) -->
    <!-- Required for personalized ads and analytics -->
    <key>NSUserTrackingUsageDescription</key>
    <string>HelpMeSpeak uses tracking data to provide personalized content recommendations and improve your app experience. Your privacy is important to us.</string>


    <!-- ============================================== -->
    <!-- PRIVACY MANIFEST (iOS 17+)                     -->
    <!-- Required for App Store submissions             -->
    <!-- ============================================== -->

    <key>NSPrivacyAccessedAPITypes</key>
    <array>
       <dict>
          <!-- File timestamp access for file management -->
          <key>NSPrivacyAccessedAPIType</key>
          <string>NSPrivacyAccessedAPICategoryFileTimestamp</string>

          <!-- Reason Code: C617.1 - Accessing file timestamps for app functionality -->
          <key>NSPrivacyAccessedAPITypeReasons</key>
          <array>
             <string>C617.1</string>
          </array>
       </dict>
    </array>


    <!-- ============================================== -->
    <!-- ENCRYPTION & SECURITY                          -->
    <!-- ============================================== -->

    <!-- Declare if app uses non-exempt encryption -->
    <!-- Set to false if using standard iOS encryption only -->
    <key>ITSAppUsesNonExemptEncryption</key>
    <false/>


    <!-- ============================================== -->
    <!-- GOOGLE SIGN-IN INTEGRATION                     -->
    <!-- ============================================== -->

    <!-- Google Client ID for OAuth authentication -->
    <key>GIDClientID</key>
    <string>189239658265-r6gmo6bt7sor00m25832d64s2as2gof7.apps.googleusercontent.com</string>

    <!-- URL Schemes for Google Sign-In callback -->
    <key>CFBundleURLTypes</key>
    <array>
       <dict>
          <key>CFBundleTypeRole</key>
          <string>Editor</string>
          <key>CFBundleURLSchemes</key>
          <array>
             <!-- Reversed client ID for Google Sign-In -->
             <string>com.googleusercontent.apps.189239658265-r6gmo6bt7sor00m25832d64s2as2gof7</string>
          </array>
       </dict>
    </array>


    <!-- ============================================== -->
    <!-- SKADNETWORK CONFIGURATION                      -->
    <!-- Apple's privacy-preserving ad attribution      -->
    <!-- ============================================== -->

    <key>SKAdNetworkItems</key>
    <array>
       <dict>
          <!-- Google AdMob SKAdNetwork identifier -->
          <key>SKAdNetworkIdentifier</key>
          <string>cstr6suwn9.skadnetwork</string>
       </dict>
       <!-- Add additional SKAdNetwork identifiers here as needed -->
    </array>


    <!-- ============================================== -->
    <!-- UI CONFIGURATION                               -->
    <!-- ============================================== -->

    <!-- Launch screen storyboard -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <!-- Main storyboard file -->
    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Enable indirect input events (iOS 13.4+) -->
    <!-- Required for pointer/trackpad support -->
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <!-- Disable frame rate throttling for smoother animations -->
    <!-- Enables 120Hz ProMotion displays on supported devices -->
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>


    <!-- ============================================== -->
    <!-- SUPPORTED INTERFACE ORIENTATIONS               -->
    <!-- ============================================== -->

    <!-- iPhone supported orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
       <string>UIInterfaceOrientationPortrait</string>
       <string>UIInterfaceOrientationLandscapeLeft</string>
       <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <!-- iPad supported orientations -->
    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
       <string>UIInterfaceOrientationPortrait</string>
       <string>UIInterfaceOrientationPortraitUpsideDown</string>
       <string>UIInterfaceOrientationLandscapeLeft</string>
       <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

</dict>
</plist>